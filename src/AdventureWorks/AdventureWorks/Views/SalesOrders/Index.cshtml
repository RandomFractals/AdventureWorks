@model IEnumerable<AdventureWorks.Models.SalesOrder>

@{
    ViewBag.Title = "orders";
}

<h3>Orders</h3>
<table class="table">
    <tr>
        <th>order info:</th>
        <th>ship to:</th>        
        <th>cost:</th>
    </tr>

@foreach (var item in Model) {
    <tr class="card-row">
        <td width="240px">
            <!-- sales order info -->
            <span class="label">
                @Html.DisplayNameFor(model => model.CustomerID):
            </span>
            @Html.DisplayFor(modelItem => item.FirstName)
            @Html.DisplayFor(modelItem => item.LastName)
            <br />
            <span class="label">
                @Html.DisplayNameFor(model => model.AccountNumber):
            </span>
            @Html.DisplayFor(modelItem => item.AccountNumber)
            <br />
            <span class="label">
                @Html.DisplayNameFor(model => model.SalesOrderNumber):
            </span>
            <a href="./SalesOrders/SalesOrderDetails?orderId=@item.SalesOrderID">@item.SalesOrderNumber</a>
        </td>
        <td>
            <!-- shipping info -->
            @Html.DisplayFor(modelItem => item.ShipToAddressID)
            @Html.DisplayFor(modelItem => item.AddressLine1)
            <br />
            @Html.DisplayFor(modelItem => item.City),
            @Html.DisplayFor(modelItem => item.StateProvinceCode),
            @Html.DisplayFor(modelItem => item.PostalCode),
            @Html.DisplayFor(modelItem => item.CountryRegionCode)
            <br />
            <span class="label">
                @Html.DisplayNameFor(model => model.ShipMethodID):
            </span>
            @Html.DisplayFor(modelItem => item.ShipMethodName)
            <br />
            <span class="label">
                @Html.DisplayNameFor(model => model.ShipDate):
            </span>
            @Html.DisplayFor(modelItem => item.ShipDate)
        </td>
        <td>
            <!-- cost -->
            <span class="label">
                @Html.DisplayNameFor(model => model.SubTotal):
            </span>
            @Html.DisplayFor(modelItem => item.SubTotal)
            <br />
            <span class="label">
                @Html.DisplayNameFor(model => model.TaxAmount):
            </span>
            @Html.DisplayFor(modelItem => item.TaxAmount)
            <br />
            <span class="label">
                @Html.DisplayNameFor(model => model.Freight):
            </span>
            @Html.DisplayFor(modelItem => item.Freight)
            <hr />
            <span class="label">
                @Html.DisplayNameFor(model => model.TotalDue):
            </span>
            @Html.DisplayFor(modelItem => item.TotalDue)
        </td>
    </tr>
}

</table>
